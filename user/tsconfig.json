{
  "compilerOptions": {
    "target": "es6",                 // or "es2015" or later
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // "outDir": "./dist",              // Directory for compiled files
    "lib": ["es2015", "dom"]         // Include the ES2015 library
  },
  "include": ["*.ts"],               // Include all TypeScript files in the current directory
  "exclude": ["node_modules", "**/*.spec.ts"]
}
